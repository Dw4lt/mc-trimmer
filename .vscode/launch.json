{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PDM Cli Example",
            "type": "debugpy",
            "request": "launch",
            "module": "mc_trimmer",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "trim",
                "-i",
                "./tests/test_in",
                "-o",
                "./tests/test_out",
                "-b",
                "./tests/test_backup",
                "-c",
                "inhabited_time<1m",
            ]
        },
        {
            "name": "Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PY_COLORS": "1",
                "PYTEST_RAISE": "1",
            },
            "args": [
                "--rootdir=.",
                "--capture=tee-sys",
                "-v",
                "tests"
            ]
        },
        {
            "name": "Generate schema",
            "type": "debugpy",
            "request": "launch",
            "module": "mc_trimmer",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--generate-schema=./schema.json",
    ]
        },
    ]
}